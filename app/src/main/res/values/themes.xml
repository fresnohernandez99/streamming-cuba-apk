<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StreamingCuba" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/light_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <item name="android:fontFamily">@font/futurastd_medium</item>
    </style>

    <style name="Theme.StreamingCuba.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BarStyle">
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:background">@drawable/bar_background_light</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="BarLayout">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="BarBtn">
        <item name="android:tint">@color/light_grey</item>
    </style>

    <style name="ChecksTabRed">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/checkbox_layout_red</item>
        <item name="android:textColor">@drawable/checkbox_layout_text_red</item>
    </style>

    <style name="ChecksTabBlue">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/checkbox_layout_blue</item>
        <item name="android:textColor">@drawable/checkbox_layout_text_blue</item>
    </style>

    <style name="TopImage">
        <item name="android:src">@drawable/top_image</item>
    </style>

    <style name="Cards">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="AppBarLayoutColor">
        <item name="android:background">@color/white</item>
    </style>

    <style name="YTColor">
        <item name="tint">@color/red</item>
    </style>

    <style name="FColor">
        <item name="tint">@color/blue</item>
    </style>

    <style name="IGColor">
        <item name="tint">@color/light_grey</item>
    </style>

    <style name="MediaTitle">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="EventsTitle">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="CalendarBtn">
        <item name="android:backgroundTint">@color/blue</item>
    </style>

</resources>